<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quotes.kaushiknandhan.quotes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quotes_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.quotes.kaushiknandhan.quotes.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quotes.kaushiknandhan.quotes.QuoteReaderActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".QuoteDetail"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>